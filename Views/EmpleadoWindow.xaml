<UserControl x:Class="LPAC___Proyecto_II_frontend.Views.EmpleadoWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:LPAC___Proyecto_II_frontend.Views"
             xmlns:viewModel="clr-namespace:LPAC___Proyecto_II_frontend.ViewModel"
             mc:Ignorable="d"
             d:DesignHeight="650" d:DesignWidth="900">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Gestión de Empleados"
                   Grid.Row="0" HorizontalAlignment="Center"
                   FontSize="28" FontWeight="Bold" Margin="0,0,0,20"/>

        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Label Content="Buscar Empleado:" VerticalAlignment="Center"/>
            <TextBox Grid.Column="1" Margin="5,0" Text="{Binding TextoBusqueda, UpdateSourceTrigger=PropertyChanged}" />
            <Button Content="Buscar" Grid.Column="2" Width="80" Margin="5,0" Command="{Binding BuscarEmpleadosCommand}"/>
            <Button Content="Nuevo" Grid.Column="3" Width="80" Margin="5,0" Command="{Binding NuevoEmpleadoCommand}"/>
        </Grid>

        <TextBlock Grid.Row="2" Text="{Binding MensajeEstado}"
                   Foreground="{Binding MensajeColor}"
                   HorizontalAlignment="Center" Margin="0,0,0,10"/>

        <DataGrid Grid.Row="3" ItemsSource="{Binding EmpleadosEncontrados}"
                  SelectedItem="{Binding EmpleadoSeleccionado, Mode=TwoWay}"
                  AutoGenerateColumns="False" IsReadOnly="True"
                  Margin="0,0,0,20"
                  HeadersVisibility="Column">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding IdEmpleado}" Width="Auto"/>
                <DataGridTextColumn Header="Nombre" Binding="{Binding NombreEmpleado}" Width="*"/>
                <DataGridTextColumn Header="Apellidos" Binding="{Binding ApellidosEmpleado}" Width="*"/>
                <DataGridTextColumn Header="Puesto" Binding="{Binding Puesto}" Width="*"/>
                <DataGridTextColumn Header="Extensión" Binding="{Binding Extension}" Width="Auto"/>
                <DataGridTextColumn Header="Teléfono" Binding="{Binding TelefonoTrabajo}" Width="Auto"/>
                <DataGridTextColumn Header="Depto. Cod" Binding="{Binding DeptoCod}" Width="Auto"/>
                <DataGridTextColumn Header="ID Rol" Binding="{Binding IdRol}" Width="Auto"/>
            </DataGrid.Columns>
        </DataGrid>

        <Border Grid.Row="4" BorderBrush="LightGray" BorderThickness="1" Padding="10" CornerRadius="5" Margin="0,0,0,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label Content="ID Empleado:" Grid.Row="0" Grid.Column="0" Margin="5"/>
                <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding EmpleadoActual.IdEmpleado}" IsReadOnly="True" Margin="5"/>

                <Label Content="Nombre:" Grid.Row="1" Grid.Column="0" Margin="5"/>
                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding EmpleadoActual.NombreEmpleado, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>

                <Label Content="Apellidos:" Grid.Row="2" Grid.Column="0" Margin="5"/>
                <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding EmpleadoActual.ApellidosEmpleado, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>

                <Label Content="Puesto:" Grid.Row="3" Grid.Column="0" Margin="5"/>
                <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding EmpleadoActual.Puesto, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>

                <Label Content="Extensión:" Grid.Row="4" Grid.Column="0" Margin="5"/>
                <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding EmpleadoActual.Extension, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>

                <Label Content="Teléfono Trabajo:" Grid.Row="5" Grid.Column="0" Margin="5"/>
                <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding EmpleadoActual.TelefonoTrabajo, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>

                <Label Content="Cód. Depto:" Grid.Row="6" Grid.Column="0" Margin="5"/>
                <TextBox Grid.Row="6" Grid.Column="1" Text="{Binding EmpleadoActual.DeptoCod, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>

                <Label Content="ID Rol:" Grid.Row="7" Grid.Column="0" Margin="5"/>
                <TextBox Grid.Row="7" Grid.Column="1" Text="{Binding EmpleadoActual.IdRol, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>
            </Grid>
        </Border>

        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Content="Guardar" Width="100" Margin="5" Command="{Binding GuardarEmpleadoCommand}"/>
            <Button Content="Editar" Width="100" Margin="5" Command="{Binding EditarEmpleadoCommand}"/>
            <Button Content="Eliminar" Width="100" Margin="5" Command="{Binding EliminarEmpleadoCommand}"/>
            <Button Content="Limpiar" Width="100" Margin="5" Command="{Binding LimpiarFormularioCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>