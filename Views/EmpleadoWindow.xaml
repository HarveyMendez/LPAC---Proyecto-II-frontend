<UserControl x:Class="LPAC___Proyecto_II_frontend.Views.EmpleadoWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModel="clr-namespace:LPAC___Proyecto_II_frontend.ViewModel"
             mc:Ignorable="d"
             d:DesignHeight="680" d:DesignWidth="950">
    <UserControl.DataContext>
        <viewModel:EmpleadoViewModel/>
    </UserControl.DataContext>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Gestión de Empleados"
                   Grid.Row="0" HorizontalAlignment="Center"
                   FontSize="28" FontWeight="Bold" Margin="0,0,0,20"/>

        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal" Grid.Column="0" HorizontalAlignment="Right">
                <Button Content="Refrescar Lista" Width="120" Margin="5,0" Command="{Binding LoadEmpleadosCommand}"/>
                <Button Content="Limpiar Formulario" Width="120" Margin="5,0" Command="{Binding ClearSelectionCommand}"/>
            </StackPanel>
        </Grid>

        <DataGrid Grid.Row="2" ItemsSource="{Binding Empleados}"
                  SelectedItem="{Binding SelectedEmpleado, Mode=TwoWay}"
                  AutoGenerateColumns="False" IsReadOnly="True"
                  Margin="0,0,0,20"
                  HeadersVisibility="Column"
                  AlternatingRowBackground="#F0F0F0"
                  RowBackground="White">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding IdEmpleado}" Width="Auto"/>
                <DataGridTextColumn Header="Nombre" Binding="{Binding NombreEmpleado}" Width="*"/>
                <DataGridTextColumn Header="Apellidos" Binding="{Binding ApellidosEmpleado}" Width="*"/>
                <DataGridTextColumn Header="Puesto" Binding="{Binding Puesto}" Width="*"/>
                <DataGridTextColumn Header="Extensión" Binding="{Binding Extension}" Width="Auto"/>
                <DataGridTextColumn Header="Teléfono" Binding="{Binding TelefonoTrabajo}" Width="Auto"/>
                <DataGridTextColumn Header="Departamento" Binding="{Binding Departamento.nombreDepartamento}" Width="*"/>
                <DataGridTextColumn Header="Rol" Binding="{Binding Rol.nombreRol}" Width="*"/>
                <DataGridTextColumn Header="Usuario" Binding="{Binding Nombre_Usuario}" Width="*"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <Border Grid.Row="3" BorderBrush="LightGray" BorderThickness="1" Padding="10" CornerRadius="5" Margin="0,0,0,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label Content="ID Empleado:" Grid.Row="0" Grid.Column="0" Margin="5"/>
                <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding SelectedEmpleado.IdEmpleado}" IsReadOnly="True" Margin="5"/>

                <Label Content="Nombre:" Grid.Row="1" Grid.Column="0" Margin="5"/>
                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding SelectedEmpleado.NombreEmpleado, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>

                <Label Content="Apellidos:" Grid.Row="2" Grid.Column="0" Margin="5"/>
                <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding SelectedEmpleado.ApellidosEmpleado, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>

                <Label Content="Puesto:" Grid.Row="3" Grid.Column="0" Margin="5"/>
                <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding SelectedEmpleado.Puesto, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>

                <Label Content="Extensión:" Grid.Row="4" Grid.Column="0" Margin="5"/>
                <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding SelectedEmpleado.Extension, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>

                <Label Content="Teléfono Trabajo:" Grid.Row="5" Grid.Column="0" Margin="5"/>
                <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding SelectedEmpleado.TelefonoTrabajo, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>

                <Label Content="Departamento:" Grid.Row="0" Grid.Column="3" Margin="5"/>
                <ComboBox Grid.Row="0" Grid.Column="4"
                  ItemsSource="{Binding Departamentos}"
                  DisplayMemberPath="nombreDepartamento"
                  SelectedValuePath="codDepartamento"
                  SelectedValue="{Binding SelectedEmpleado.Departamento.codDepartamento, Mode=TwoWay}" Margin="5"/>     

                <Label Content="Rol:" Grid.Row="1" Grid.Column="3" Margin="5"/>
                <ComboBox Grid.Row="1" Grid.Column="4"
                  ItemsSource="{Binding Roles}"
                  DisplayMemberPath="nombreRol"
                  SelectedValuePath="idRol"
                  SelectedValue="{Binding SelectedEmpleado.Rol.idRol, Mode=TwoWay}" Margin="5"/>

                <Label Content="Usuario:" Grid.Row="2" Grid.Column="3" Margin="5"/>
                <TextBox Grid.Row="2" Grid.Column="4" Text="{Binding SelectedEmpleado.Nombre_Usuario, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>

                <Label Content="Email:" Grid.Row="3" Grid.Column="3" Margin="5"/>
                <TextBox Grid.Row="3" Grid.Column="4" Text="{Binding SelectedEmpleado.Email, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>

            </Grid>
        </Border>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Content="Agregar" Width="100" Margin="5" Command="{Binding AddEmpleadoCommand}"/>
            <Button Content="Modificar" Width="100" Margin="5" Command="{Binding UpdateEmpleadoCommand}"/>
            <Button Content="Eliminar" Width="100" Margin="5" Command="{Binding DeleteEmpleadoCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>