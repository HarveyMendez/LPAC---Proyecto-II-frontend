<UserControl x:Class="LPAC___Proyecto_II_frontend.Views.CategoriaWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModel="clr-namespace:LPAC___Proyecto_II_frontend.ViewModel"
             mc:Ignorable="d"
             d:DesignHeight="680" d:DesignWidth="950">

    <UserControl.DataContext>
        <viewModel:CategoriaViewModel/>
    </UserControl.DataContext>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Gestión de Categorías"
                   Grid.Row="0" HorizontalAlignment="Center"
                   FontSize="24" FontWeight="Bold" Margin="0,0,0,20"
                   Foreground="#333333"/>

        <Border Grid.Row="1" BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="4" Padding="10" Margin="0,0,0,10" Background="White">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBox Width="200" Margin="0,0,5,0" VerticalAlignment="Center"
                         Text="{Binding TextoBusqueda, UpdateSourceTrigger=PropertyChanged}" 
                         ToolTip="Buscar por código o descripción"/>
            </StackPanel>
        </Border>

        <Border Grid.Row="2" BorderBrush="LightGray" BorderThickness="1" CornerRadius="5" Margin="0,0,0,20" Background="White">
            <DataGrid ItemsSource="{Binding Categorias}"
                      SelectedItem="{Binding SelectedCategoria, Mode=TwoWay}"
                      AutoGenerateColumns="False" IsReadOnly="True"
                      SelectionMode="Single">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Código" Binding="{Binding codCategoria}" Width="Auto"/>
                    <DataGridTextColumn Header="Descripción" Binding="{Binding descripcion}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <Border Grid.Row="3" BorderBrush="LightGray" BorderThickness="1" Padding="10" CornerRadius="5" Margin="0,0,0,10" Background="White">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label Content="Código:" Grid.Column="0" Margin="5"/>
                <TextBox Grid.Column="1" Text="{Binding EditCategoria.codCategoria, UpdateSourceTrigger=PropertyChanged}" Margin="5"
                         IsReadOnly="{Binding IsCategoriaSelected}"/>

                <Label Content="Descripción:" Grid.Column="2" Margin="5"/>
                <TextBox Grid.Column="3" Text="{Binding EditCategoria.descripcion, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>
            </Grid>
        </Border>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Content="Guardar" Width="100" Margin="5" Command="{Binding SaveCategoriaCommand}"/>
            <Button Content="Eliminar" Width="100" Margin="5" Command="{Binding DeleteCategoriaCommand}" IsEnabled="{Binding IsCategoriaSelected}"/>
            <Button Content="Cancelar" Width="100" Margin="5" Command="{Binding CancelEditCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>