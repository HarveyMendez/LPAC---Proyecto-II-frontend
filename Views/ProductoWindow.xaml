<Window x:Class="LPAC___Proyecto_II_frontend.Views.ProductoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LPAC___Proyecto_II_frontend.Views"
        xmlns:viewModel="clr-namespace:LPAC___Proyecto_II_frontend.ViewModel"
        mc:Ignorable="d"
        Title="Gestión de Productos" Height="650" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#1e1e1e" Foreground="White">
    <Window.DataContext>
        <viewModel:ProductoViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="LightGray"/>
        </Style>
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="LightGray"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#555555"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CaretBrush" Value="White"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#555555"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="LightGray"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style x:Key="BaseButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#555555"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#404040"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#202020"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DarkButtonStyle" TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
            <Setter Property="Background" Value="#303030"/>
        </Style>

        <Style x:Key="AccentButtonStyle" TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
            <Setter Property="Background" Value="#007ACC"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#006BBF"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#005A99"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DestructiveButtonStyle" TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
            <Setter Property="Background" Value="#CC2936"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#B2242F"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#991F28"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="#252525"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#444444"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#3a3a3a"/>
            <Setter Property="VerticalGridLinesBrush" Value="#3a3a3a"/>
            <Setter Property="RowBackground" Value="#252525"/>
            <Setter Property="AlternatingRowBackground" Value="#2a2a2a"/>
        </Style>
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#303030"/>
            <Setter Property="Foreground" Value="LightGray"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="BorderBrush" Value="#444444"/>
            <Setter Property="BorderThickness" Value="0,0,1,1"/>
        </Style>
        <Style TargetType="DataGridCell">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        </Style>
        <Style TargetType="DataGridRow">
            <Setter Property="Background" Value="#252525"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#005A99"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#404040"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Padding="8" CornerRadius="5" Background="#303030" Margin="0,0,0,15"
                BorderBrush="{Binding MensajeColor}" BorderThickness="1">
            <TextBlock Text="{Binding MensajeEstado}"
                       Foreground="{Binding MensajeColor}"
                       HorizontalAlignment="Center" VerticalAlignment="Center"
                       FontWeight="SemiBold" FontSize="14"/>
        </Border>

        <Border Grid.Row="1" BorderBrush="#444444" BorderThickness="1" CornerRadius="5" Padding="15" Margin="0,0,0,15" Background="#252525">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Label Content="Buscar Producto:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBox Width="250" Text="{Binding TextoBusqueda, UpdateSourceTrigger=PropertyChanged}"/>
                <Button Content="Buscar" Command="{Binding BuscarProductosCommand}"
                        Style="{StaticResource DarkButtonStyle}" Margin="15,0,0,0"/>
            </StackPanel>
        </Border>

        <DataGrid Grid.Row="2" ItemsSource="{Binding ProductosEncontrados}"
                  SelectedItem="{Binding ProductoActual}" AutoGenerateColumns="False" IsReadOnly="True" Margin="0,0,0,15"
                  SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding idProducto}" Width="Auto"/>
                <DataGridTextColumn Header="Nombre Producto" Binding="{Binding nombreProducto}" Width="*"/>
                <DataGridTextColumn Header="Precio" Binding="{Binding precio, StringFormat=C}" Width="Auto"/>
                <DataGridTextColumn Header="Categoría" Binding="{Binding codCategoria}" Width="Auto"/>
                <DataGridTextColumn Header="Existencias" Binding="{Binding cantidadExistencias}" Width="Auto"/>
                <DataGridTextColumn Header="Punto Reorden" Binding="{Binding puntoReorden}" Width="Auto"/>
                <DataGridCheckBoxColumn Header="Aplica Impuesto" Binding="{Binding aplicaImpuesto}" Width="Auto"/>
                <DataGridTextColumn Header="Talla" Binding="{Binding talla}" Width="Auto"/>
                <DataGridCheckBoxColumn Header="Eliminado" Binding="{Binding eliminado}" Width="Auto"/>
            </DataGrid.Columns>
        </DataGrid>

        <Border Grid.Row="3" BorderBrush="#444444" BorderThickness="1" CornerRadius="5" Padding="15" Background="#252525">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Content="Nombre:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,5,5,5"/>
                <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding ProductoActual.nombreProducto, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,5,5"/>

                <Label Content="Precio:" Grid.Row="0" Grid.Column="2" VerticalAlignment="Center" Margin="15,5,5,5"/>
                <TextBox Grid.Row="0" Grid.Column="3" Text="{Binding ProductoActual.precio, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,5,5"/>

                <Label Content="Categoría (Código):" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,5,5,5"/>
                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding ProductoActual.codCategoria, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,5,5"/>

                <Label Content="Existencias:" Grid.Row="1" Grid.Column="2" VerticalAlignment="Center" Margin="15,5,5,5"/>
                <TextBox Grid.Row="1" Grid.Column="3" Text="{Binding ProductoActual.cantidadExistencias, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,5,5"/>

                <Label Content="Punto Reorden:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0,5,5,5"/>
                <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding ProductoActual.puntoReorden, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,5,5"/>

                <Label Content="Aplica Impuesto:" Grid.Row="2" Grid.Column="2" VerticalAlignment="Center" Margin="15,5,5,5"/>
                <CheckBox Grid.Row="2" Grid.Column="3" IsChecked="{Binding ProductoActual.aplicaImpuesto}" VerticalAlignment="Center" Margin="0,5,5,5"/>

                <Label Content="Talla:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Margin="0,5,5,5"/>
                <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding ProductoActual.talla, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,5,5"/>

                <Label Content="Eliminado:" Grid.Row="3" Grid.Column="2" VerticalAlignment="Center" Margin="15,5,5,5"/>
                <CheckBox Grid.Row="3" Grid.Column="3" IsChecked="{Binding ProductoActual.eliminado}" VerticalAlignment="Center" Margin="0,5,5,5"/>

            </Grid>
        </Border>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="Guardar" Command="{Binding GuardarProductoCommand}" Style="{StaticResource AccentButtonStyle}"/>
            <Button Content="Eliminar" Command="{Binding EliminarProductoCommand}" Style="{StaticResource DestructiveButtonStyle}"/>
            <Button Content="Limpiar" Command="{Binding LimpiarFormularioCommand}" Style="{StaticResource DarkButtonStyle}"/>
        </StackPanel>
    </Grid>
</Window>