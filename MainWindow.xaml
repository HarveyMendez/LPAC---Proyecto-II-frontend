<Window x:Class="LPAC___Proyecto_II_frontend.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LPAC___Proyecto_II_frontend"
        mc:Ignorable="d"
        Title="Gestión de VentasCR" Height="600" Width="900" MinHeight="400" MinWidth="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#F0F0F0" BorderBrush="#CCCCCC" BorderThickness="0,0,1,0">
            <StackPanel Margin="10">

                <TextBlock Text="Menú Principal" FontSize="20" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"
                           Foreground="#333333"/>

                <Button Content="Empleados"
                        FontSize="16" FontWeight="SemiBold"
                        Margin="0,5,0,0"
                        Padding="10"
                        HorizontalContentAlignment="Left"
                        Background="#FFFFFF"
                        BorderBrush="#DDDDDD"
                        BorderThickness="1"
                       Click="Empleados_Click"/>

                <Button Content="Clientes"
                        FontSize="16" FontWeight="SemiBold"
                        Margin="0,5,0,0"
                        Padding="10"
                        HorizontalContentAlignment="Left"
                        Background="#FFFFFF"
                        BorderBrush="#DDDDDD"
                        BorderThickness="1"
                        Click="Clientes_Click"/>

                <Button Content="Productos"
                        FontSize="16" FontWeight="SemiBold"
                        Margin="0,5,0,0"
                        Padding="10"
                        HorizontalContentAlignment="Left"
                        Background="#FFFFFF"
                        BorderBrush="#DDDDDD"
                        BorderThickness="1"
                        Click="Productos_Click"/>
                
                <Button Content="Ordenes"
                        FontSize="16" FontWeight="SemiBold"
                        Margin="0,5,0,0"
                        Padding="10"
                        HorizontalContentAlignment="Left"
                        Background="#FFFFFF"
                        BorderBrush="#DDDDDD"
                        BorderThickness="1"
                        Click="Ordenes_Click"/>    

            </StackPanel>
        </Border>

        <ContentControl Grid.Column="1" x:Name="MainContentArea" Margin="15"/>

    </Grid>
</Window>